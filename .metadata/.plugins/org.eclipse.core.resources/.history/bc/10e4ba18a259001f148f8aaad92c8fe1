##Puesto para hacer pruebas en local
server.port=8080

##Configuracion de db
spring.datasource.url=jdbc:oracle:thin:@localhost:1521:XE
spring.datasource.username=dbRamses
spring.datasource.password=admin
spring.datasource.driver-class-name=oracle.jdbc.OracleDriver

## Configuracion de Jpa e Hibernate
spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=update

##Seguridad
spring.security.user.name=memo
spring.security.user.password=admin

# Circuit Breaker Configuration
resilience4j.circuitbreaker.instances.exampleService.registerHealthIndicator=true
resilience4j.circuitbreaker.instances.exampleService.slidingWindowSize=10
resilience4j.circuitbreaker.instances.exampleService.permittedNumberOfCallsInHalfOpenState=3
resilience4j.circuitbreaker.instances.exampleService.failureRateThreshold=50
resilience4j.circuitbreaker.instances.exampleService.waitDurationInOpenState=10000
resilience4j.circuitbreaker.instances.exampleService.eventConsumerBufferSize=10
resilience4j.circuitbreaker.instances.exampleService.recordExceptions=java.io.IOException
resilience4j.circuitbreaker.instances.exampleService.ignoreExceptions=java.lang.IllegalArgumentException

# Retry Configuration
resilience4j.retry.instances.exampleService.maxAttempts=5
resilience4j.retry.instances.exampleService.waitDuration=500ms
resilience4j.retry.instances.exampleService.retryExceptions=java.io.IOException
